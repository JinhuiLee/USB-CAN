	        i = (short)(n + 1);
	        msg.buffer[n] = (byte)(CANIndex + 1);
	        int n2 = i;
	        i = (short)(n2 + 1);
	        msg.buffer[n2] = 0;
	        int n3 = i;
	        i = (short)(n3 + 1);
	        msg.buffer[n3] = (byte)(pInitConfig.CAN_ABOM % 2);
